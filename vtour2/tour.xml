		<hotspot name="spot2" style="skin_hotspotstyle" ath="108.742" atv="-2.335" linkedscene="scene_image03" />
		<hotspot name="spot3" style="skin_hotspotstyle" ath="24.402" atv="-0.644" linkedscene="scene_image04" />

